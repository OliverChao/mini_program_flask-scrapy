<!--index.wxml-->
<view class='content'>
    <view class='bg' style="background-image:url('https://www.oliverlovesannabelle.club/static/pics_on_mini/bg_mine.jpg');  background-size:cover">
      <view class='know'>
         <view class="userinfo">
           <open-data open-type="getUserInfo" bindtap='test_log' class="userinfo-avatar"  type="userAvatarUrl"></open-data>
            <open-data class="userinfo-nickname" lang="zh_CN" type='userNickName'></open-data>
         </view>
      </view>
          <view class="userinfo_local">
            <open-data  class="local" lang="zh_CN" type='userCountry'></open-data>
           <open-data  class="local" lang="zh_CN" type='userProvince'></open-data>
           <open-data  class="local" lang="zh_CN" type='userCity'></open-data>
          </view>
    </view>

          <view class='hint_login' wx:if="{{!hasUserInfo}}">
          <text style='color:red'> 未登入</text>
          </view>


<view class='main1' animation="{{slide_up1}}">
    <view class='hr'></view>
    <view class='item' bindtap='gofuture'>
      <view class='name'> 
       <image src='../../image/calendar.png' > </image> 
       <text>超时空未来</text>
     </view>
         <image class='hint_jin'  src='/image/ai226.png'> </image>
    </view>

     <view class='hr'></view>
   
    <view class='item' bindtap='finishtask'>
      <view class='name'>
        <image src='../../image/duigou_kuai.png' > </image>
        <text>已完成任务</text>
        
        </view>
        <image class='hint_jin'  src='/image/ai226.png'> </image>
      </view>
  

      <view class='line'></view>
    <view class='item' bindtap='resttask'>
      <view class='name'>
        <image src='../../image/cuocha_kuai.png' ></image> 
        <text>未完成任务</text>
        
      </view>
       <image class='hint_jin'  src='/image/ai226.png'> </image>
    </view>

    <view class='hr'></view>


       <view class='line'></view>
    <view class='item' bindtap='myposts'>
      <view class='name'>
        <image src='../../image/wenzhang.png' ></image> 
        <text>我的发布</text>
        
      </view>
       <image class='hint_jin'  src='/image/ai226.png'> </image>
    </view>

    <view class='hr'></view>
   

    <view class='hr-1'></view>
      <view class='item' bindtap='setting'>
        <view class='name'>
         <image  src='../../image/setup.png' > </image> 
          <text>设置</text> 
      </view>
          <image class='hint_jin'  src='/image/ai226.png'> </image>
    </view>
        <view class='line'></view>
  </view>
    
</view>
 
